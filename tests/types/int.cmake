include(cmake_test/cmake_test)

ct_add_test(NAME [[test_cpp_is_int]])
function("${CMAKETEST_TEST}")
    include(cmakepp_lang/types/int)

    ct_add_section(NAME [[test_signature]] EXPECTFAIL)
    function("${CMAKETEST_SECTION}")
        cpp_is_int(return 1 hello)
    endfunction()

    ct_add_section(NAME [[test_bool]])
    function("${CMAKETEST_SECTION}")
        cpp_is_int(return TRUE)
        ct_assert_equal(return FALSE)
    endfunction()

    ct_add_section(NAME [[test_class]])
    function("${CMAKETEST_SECTION}")
        include(cmakepp_lang/class/class)
        cpp_class(MyClass)

        cpp_is_int(return MyClass)
        ct_assert_equal(return FALSE)
    endfunction()

    ct_add_section(NAME [[test_command]])
    function("${CMAKETEST_SECTION}")
        cpp_is_int(return add_subdirectory)
        ct_assert_equal(return FALSE)
    endfunction()

    ct_add_section(NAME [[test_descriptions]])
    function("${CMAKETEST_SECTION}")
        ct_add_section(NAME [[description_without_integer]])
        function("${CMAKETEST_SECTION}")
            cpp_is_int(return "Hello World")
            ct_assert_equal(return FALSE)
        endfunction()

        ct_add_section(NAME [[description_contains_integer]])
        function("${CMAKETEST_SECTION}")
            cpp_is_int(return "Hello World 1")
            ct_assert_equal(return FALSE)
        endfunction()
    endfunction()

    ct_add_section(NAME [[test_float]])
    function("${CMAKETEST_SECTION}")
        cpp_is_int(return 3.14)
        ct_assert_equal(return FALSE)
    endfunction()

    ct_add_section(NAME [[test_integer]])
    function("${CMAKETEST_SECTION}")
        ct_add_section(NAME [[small_positive]])
        function("${CMAKETEST_SECTION}")
            cpp_is_int(return 42)
            ct_assert_equal(return TRUE)
        endfunction()

        ct_add_section(NAME [[small_negative]])
        function("${CMAKETEST_SECTION}")
            cpp_is_int(return -42)
            ct_assert_equal(return TRUE)
        endfunction()

        ct_add_section(NAME [[large_positive]])
        function("${CMAKETEST_SECTION}")
            cpp_is_int(return 123456789)
            ct_assert_equal(return TRUE)
        endfunction()

        ct_add_section(NAME [[large_negative]])
        function("${CMAKETEST_SECTION}")
            cpp_is_int(return -123456789)
            ct_assert_equal(return TRUE)
        endfunction()
    endfunction()

    ct_add_section(NAME [[test_list]])
    function("${CMAKETEST_SECTION}")
        ct_add_section(NAME [[normal_list]])
        function("${CMAKETEST_SECTION}")
            cpp_is_int(return "hello;world")
            ct_assert_equal(return FALSE)
        endfunction()

        ct_add_section(NAME [[list_of_integers]])
        function("${CMAKETEST_SECTION}")
            cpp_is_int(return "1;2;3")
            ct_assert_equal(return FALSE)
        endfunction()
    endfunction()

    ct_add_section(NAME [[test_map]])
    function("${CMAKETEST_SECTION}")
        include(cmakepp_lang/map/map)
        cpp_map(CTOR a_map)
        cpp_is_int(result a_map)
        ct_assert_equal(result FALSE)
    endfunction()

    ct_add_section(NAME [[test_obj]])
    function("${CMAKETEST_SECTION}")
        include(cmakepp_lang/object/object)
        cpp_is_int(result "${__CMAKEPP_LANG_OBJECT_SINGLETON__}")
        ct_assert_equal(result FALSE)
    endfunction()

    ct_add_section(NAME [[test_path]])
    function("${CMAKETEST_SECTION}")
        ct_add_section(NAME [[normal_path]])
        function("${CMAKETEST_SECTION}")
            cpp_is_int(return "${CMAKE_CURRENT_LIST_DIR}")
            ct_assert_equal(return FALSE)
        endfunction()

        ct_add_section(NAME [[path_contains_int]])
        function("${CMAKETEST_SECTION}")
            cpp_is_int(return "${CMAKE_CURRENT_LIST_DIR}/3")
            ct_assert_equal(return FALSE)
        endfunction()
    endfunction()

    ct_add_section(NAME [[test_target]])
    function("${CMAKETEST_SECTION}")
        ct_add_section(NAME [[normal_target_name]])
        function("${CMAKETEST_SECTION}")
            add_library(lib STATIC IMPORTED)
            cpp_is_int(return lib)
            ct_assert_equal(return FALSE)
        endfunction()

        ct_add_section(NAME [[target_with_integer]])
        function("${CMAKETEST_SECTION}")
            add_library(lib1 STATIC IMPORTED)
            cpp_is_int(return lib1)
            ct_assert_equal(return FALSE)
        endfunction()
    endfunction()

    ct_add_section(NAME [[test_type]])
    function("${CMAKETEST_SECTION}")
        cpp_is_int(return bool)
        ct_assert_equal(return FALSE)
    endfunction()
endfunction()
